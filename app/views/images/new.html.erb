<%= form_for @image, :url => {:controller => 'images', :action => 'create'}, :html => {:multipart => true}  do |f|%>
		<%= f.label :avatar, "Choose Image:" %>
		<%= f.file_field :avatar %>
		<br>
		<br>
		<%= f.label :tags, "Tag:" %>
		<%= f.text_field :tag_list, value: f.object.tag_list.to_s, placeholder: "(seperated by commas)" %>
		<br><br>
		<%= f.label :name, "Name:" %>
		<%= f.text_field :name %>
		<br>
		<br>
		<%= f.submit "Upload Image" %>
<% end %>